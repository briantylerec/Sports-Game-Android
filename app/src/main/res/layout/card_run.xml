<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="0dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@color/gray_dark"
    android:id="@+id/item_record">

    <LinearLayout
        android:id="@+id/lyDataRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lyDataRunHeader"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHeaderDate"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="05-OCT-2021"
                android:textAlignment="textEnd"
                android:textColor="@color/gray_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvHeaderDuration"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray_strong"
                android:fontFamily="sans-serif-light"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="01:00HH"
                android:textAlignment="textEnd"
                android:textColor="@color/gray_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvHeaderDistance"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray_strong"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="12.5KM"
                android:textAlignment="textEnd"
                android:textColor="@color/gray_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvHeaderAvgSpeed"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray_strong"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="12.5KM/H"
                android:textAlignment="textEnd"
                android:textColor="@color/gray_light"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ivHeaderMedalDistance"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/medal_null_dark" />

            <ImageView
                android:id="@+id/ivHeaderMedalAvgSpeed"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/medal_null_dark" />

            <ImageView
                android:id="@+id/ivHeaderMedalMaxSpeed"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/medal_null_dark" />

            <ImageView
                android:id="@+id/ivHeaderOpenClose"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:rotation="0"
                android:src="@drawable/opener_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyDataRunBody"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lyDataRunBodyContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:translationY="0dp">

                <LinearLayout
                    android:id="@+id/lyDataDateSport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="top|right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lySport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray_strong"
                        android:gravity="top|right"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivSportSelected"
                            android:layout_width="80dp"
                            android:layout_height="52dp"
                            android:background="@color/orange"
                            android:src="@mipmap/running" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyDate"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray_strong"
                        android:gravity="top|right"
                        android:orientation="vertical"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="sans-serif-light"
                            android:text="05-OCT-2021"
                            android:textAlignment="textEnd"
                            android:textColor="@color/gray_light"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="sans-serif-light"
                            android:text="00:00:00"
                            android:textAlignment="textEnd"
                            android:textColor="@color/gray_light"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyPicture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivPicture"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPlay"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray_light"
                        android:fontFamily="sans-serif-light"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="REPRODUCIR"
                        android:textAlignment="center"
                        android:textColor="@color/gray_dark"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDelete"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray_light"
                        android:fontFamily="sans-serif-light"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="ELIMINAR"
                        android:textAlignment="center"
                        android:textColor="@color/gray_dark"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyDataDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="top|right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lyDuration"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray_strong"
                        android:gravity="top|right"
                        android:orientation="vertical"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/tvDurationTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/PopUpDurationTitle"
                            android:textAlignment="textEnd"
                            android:textColor="@color/gray_light"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDurationRun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-light"
                            android:text="00:00:00"
                            android:textAlignment="textEnd"
                            android:textColor="@color/gray_light"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/lyChallengeDurationRun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/gray_strong"
                            android:gravity="top|right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvChallengeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-light"
                                android:text="@string/PopUpChallengeTitle"
                                android:textAlignment="textEnd"
                                android:textColor="@color/gray_light"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvChallengeDurationRun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-light"
                                android:text="01:00:00"
                                android:textAlignment="textEnd"
                                android:textColor="@color/gray_light"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyIntervalRun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/gray_strong"
                            android:gravity="top|right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvIntervalTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-light"
                                android:text="@string/PopUpIntervalTitle"
                                android:textAlignment="textEnd"
                                android:textColor="@color/gray_light"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvIntervalRun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-light"
                                android:text="5min (1:45 / 3:15)"
                                android:textAlignment="textEnd"
                                android:textColor="@color/gray_light"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyDataDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lyDistance"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/gray_strong"
                        android:gravity="top|right"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/tvDistanceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/PopUpDistanceTitle"
                            android:textAlignment="textEnd"
                            android:textColor="@color/gray_light"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/lyDistanceData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:background="@color/gray_strong"
                            android:gravity="top|right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvDistanceRun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="4dp"
                                android:fontFamily="sans-serif-light"
                                android:text="0.00"
                                android:textAlignment="textEnd"
                                android:textColor="@color/gray_light"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvDistanceRunUX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-light"
                                android:text="KM"
                                android:textAlignment="textEnd"
                                android:textColor="@color/gray_light"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyChallengeDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/gray_strong"
                            android:gravity="top|right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvChallengeDistanceTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-light"
                                android:text="@string/PopUpChallengeTitle"
                                android:textAlignment="textEnd"
                                android:textColor="@color/gray_light"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:id="@+id/lyChallengeDistanceRun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_strong"
                                android:gravity="top|right"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvChallengeDistanceRun"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginRight="4dp"
                                    android:fontFamily="sans-serif-light"
                                    android:text="15.00"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/gray_light"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvChallengeDistanceRunUX"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="sans-serif-light"
                                    android:text="KM"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/gray_light"
                                    android:textSize="10sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyUnevennessRun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/gray_strong"
                            android:gravity="top|right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvUnevennessTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-light"
                                android:text="@string/PopUpUnevennessTitle"
                                android:textAlignment="textEnd"
                                android:textColor="@color/gray_light"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:id="@+id/lyUnevennessDataRun"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0dp"
                                android:gravity="top|right"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/lyMaxUnevennessRun"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="0dp"
                                    android:gravity="top|right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvMaxUnevennessRun"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginRight="2dp"
                                        android:drawableStart="@drawable/max"
                                        android:drawablePadding="3dp"
                                        android:fontFamily="sans-serif-light"
                                        android:text="1782"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/gray_light"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/tvMaxUnevennessUX"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginRight="4dp"
                                        android:fontFamily="sans-serif-light"
                                        android:text="MSNM"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/gray_light"
                                        android:textSize="9sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lyMinUnevennessRun"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="0dp"
                                    android:gravity="top|right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvMinUnevennessRun"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginRight="2dp"
                                        android:drawableStart="@drawable/min"
                                        android:drawablePadding="3dp"
                                        android:fontFamily="sans-serif-light"
                                        android:text="1782"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/gray_light"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/tvMinUnevennessUX"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginRight="4dp"
                                        android:fontFamily="sans-serif-light"
                                        android:text="MSNM"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/gray_light"
                                        android:textSize="9sp" />

                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyDataSpeedMedals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lySpeeds"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/gray_strong"
                        android:gravity="top|right"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/tvAvgSpeedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/CardAvgSpeedTitle"
                            android:textAlignment="textEnd"
                            android:textColor="@color/gray_light"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/lyAvgSpeedDataRun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:background="@color/gray_strong"
                            android:gravity="top|right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvAvgSpeedRun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="4dp"
                                android:fontFamily="sans-serif-light"
                                android:text="0.0"
                                android:textAlignment="textEnd"
                                android:textColor="@color/gray_light"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvAvgSpeedRunUX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-light"
                                android:text="KM/H"
                                android:textAlignment="textEnd"
                                android:textColor="@color/gray_light"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvMaxSpeedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/CardMaxSpeedTitle"
                            android:textAlignment="textEnd"
                            android:textColor="@color/gray_light"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/lyMaxSpeedRun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/gray_strong"
                            android:gravity="top|right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvMaxSpeedRun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="4dp"
                                android:fontFamily="sans-serif-light"
                                android:text="0.0"
                                android:textAlignment="textEnd"
                                android:textColor="@color/gray_light"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvMaxSpeedRunUX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-light"
                                android:text="KM/H"
                                android:textAlignment="textEnd"
                                android:textColor="@color/gray_light"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyMedalsRun"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="top|center"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:translationY="-30dp">

                        <LinearLayout
                            android:id="@+id/lyMedalDistance"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|center"
                            android:orientation="vertical"
                            android:paddingBottom="0dp">

                            <ImageView
                                android:id="@+id/ivMedalDistance"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:src="@drawable/medal_null_dark" />

                            <TextView
                                android:id="@+id/tvMedalDistanceTitle"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="sans-serif-light"
                                android:text="@string/textNull"
                                android:textAlignment="center"
                                android:textColor="@color/gray_light"
                                android:textSize="10sp"
                                android:textStyle="italic"
                                android:translationY="05dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyMedalAvgSpeed"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:gravity="bottom|center"
                            android:orientation="vertical"
                            android:paddingBottom="0dp">

                            <ImageView
                                android:id="@+id/ivMedalAvgSpeed"
                                android:layout_width="33dp"
                                android:layout_height="wrap_content"
