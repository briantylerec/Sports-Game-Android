<!--        <item name="android:layout_height">wrap_content</item>-->
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
        <!-- To remove divider of the number picker -->
        <item name="colorControlNormal">@android:color/transparent</item>
        <!--<item name="colorControlNormal">@color/gray_dark</item>-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/gray_dark</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ba_dialogos">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
